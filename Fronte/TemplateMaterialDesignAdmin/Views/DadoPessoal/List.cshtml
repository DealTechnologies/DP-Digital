@model IEnumerable<TemplateMaterialDesignAdmin.Models.Colaborador.Colaborador>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h1>Lista de colaboradores</h1>

                <p style="margin-top:1%;"><a asp-action="Index">Inserir Novo</a></p>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NomeCompleto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DDD)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TelefoneCelular)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataNascimento)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NomeCompleto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DDD)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TelefoneCelular)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataNascimento)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ }) |
                                        @Html.ActionLink("Detalhes", "Details", new { /* id=item.PrimaryKey */ }) |
                                        @Html.ActionLink("Excluir", "Delete", new { /* id=item.PrimaryKey */ })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>