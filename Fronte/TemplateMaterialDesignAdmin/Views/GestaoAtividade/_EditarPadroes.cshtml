<div class="modal fade" id="largeModalEditarPadroes" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="largeModalLabel">Editar Padrões</h4>
            </div>
            <hr />
            <div class="modal-body">
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <label>Fuso Horário</label>
                        <div class="form-group">
                            <div class="form-line">
                                <select id="slcPED" class="form-control show-tick selectpicker">
                                    <option>Selecione o Fuso</option>
                                    <option>GMT-3</option>
                                    <option>GMT-4</option>
                                    <option>GMT-5</option>
                                    <option>GMT-6</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-12">
                        <label>PED Padrão</label>
                        <div class="form-group">
                            <div class="form-line">
                                <select id="slcPED" class="form-control show-tick selectpicker">
                                    <option>Selecione o PED</option>
                                    <option>PED-3</option>
                                    <option>PED-4</option>
                                    <option>PED-5</option>
                                    <option>PED-6</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">                    
                    <div class="col-sm-4">
                        <label>Entrada</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input class="form-control" type="time" id="appt" name="appt" min="09:00" max="18:00" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <label>Saída</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input class="form-control" type="time" id="appt" name="appt" min="09:00" max="18:00" required>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-4">
                        <label>Início do Intervalo (Almoço)</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input class="form-control" type="time" id="appt" name="appt" min="09:00" max="18:00" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <label>Fim do Intervalo (Almoço)</label>
                        <div class="form-group">
                            <div class="form-line">
                                <input class="form-control" type="time" id="appt" name="appt" min="09:00" max="18:00" required>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" id="btnEditarPadraoAdd" onclick="fecharModalEditarPadroes();" class="btn bg-greenNew waves-effect right" style="margin-left:10px">Adicionar</button>
                <button type="button" id="btnEditarPadraoClose" class="btn bg-deafult waves-effect right" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>


